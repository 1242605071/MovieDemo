<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.myactivity.TicketActivity">
    <ImageView
        
        android:id="@+id/back"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:src="@drawable/jian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_38"
        android:text="我的电影票"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_80"
        android:id="@+id/rl"
        android:background="#141931"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:background="@drawable/piao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:text="我的电影票"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_18"
        android:text="悲伤就逆流成河"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_37"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_49"
        android:background="@drawable/group_zuoq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginTop="@dimen/dp_90"
        android:text="5排 5座"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_117"
        android:layout_marginTop="@dimen/dp_49"
        android:text="保利国际影城（龙旗广场店）"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_117"
        android:layout_marginTop="@dimen/dp_72"
        android:text="中影I Do巨幕全景声厅"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_117"
        android:layout_marginTop="@dimen/dp_96"
        android:text="2019年06月5日"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_117"
        android:layout_marginTop="@dimen/dp_119"
        android:text="14:10-16:35"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.CardView

        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_110"
        android:layout_marginRight="@dimen/dp_18"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/dian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8185e"
            android:text="查看取票码"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/piao"
        android:layout_marginTop="@dimen/dp_179"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_174"
        android:layout_height="@dimen/dp_174"
        android:background="@drawable/asdd"
        android:visibility="gone"
        />
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/quxiao"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_422"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/but_qu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8185e"
            android:text="取消"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>
</RelativeLayout>