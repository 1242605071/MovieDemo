<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141931"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/jian"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:src="@drawable/jian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_38"
        android:text="影院详情"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/xiang_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="24dp"
        android:text="保利国际影城（龙旗广场店）"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/xiangxin_no"
        android:layout_width="@dimen/sp_16"
        android:layout_height="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_82"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:src="@drawable/emptyheart" />
    <ImageView
        android:id="@+id/xiangxin_yes"
        android:layout_width="@dimen/sp_16"
        android:layout_height="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_82"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:src="@drawable/baise" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_34"
        android:text="3D眼镜"
        android:textColor="#d3af56"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_104"
        android:text="儿童优惠"
        android:textColor="#d3af56"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_183"
        android:text="4K厅"
        android:textColor="#d3af56"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:text="到这去"
        android:textColor="@android:color/white"
        />
    <ImageView
        android:layout_width="@dimen/sp_13"
        android:layout_height="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/group_10" />

    <android.support.design.widget.TabLayout
        android:id="@+id/cim_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_161"
        app:tabTextColor="@android:color/white"
        android:orientation="horizontal"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/cim_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cim_tab"
        ></android.support.v4.view.ViewPager>
    <Button
        android:id="@+id/btn_paiqi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="查看该影院电影排期"
        android:textColor="@android:color/white"
        android:background="#e8185e"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>