<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.myactivity.BanActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:src="@drawable/jian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_38"
        android:text="最新版本"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />
    <ImageView
        android:layout_marginTop="@dimen/dp_110"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/asddd"/>
    <TextView
        android:textColor="#ffff"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_230"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最新版本"
       />
    <TextView
        android:textColor="#ffff"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_260"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V2.0"
        />
    <Button
        android:id="@+id/but"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_337"
        android:background="@drawable/se"
        android:text="立即更新"
        android:textColor="#ffff"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>