<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.myactivity.SetupActivity">

    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:src="@drawable/jian"
        android:id="@+id/shezhi_jian"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_38"
        android:text="设置"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c2243"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="清除缓存"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    tools:text="10M"
                    />

            <TextView
                android:id="@+id/genxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_54"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="版本更新"
                />

            <ImageView
                android:id="@+id/gen"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_53"
                android:layout_marginRight="@dimen/dp_12"
                android:padding="9dp"
                android:src="@drawable/shape_1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_178"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c2243"
            android:id="@+id/pwds"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="重置密码"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_12"
                android:padding="9dp"
                android:src="@drawable/shape_1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_242"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="退出登录"
            android:textSize="@dimen/sp_14"
            android:id="@+id/but_tuiLogin"
            android:background="#1c2243"
            android:textColor="@android:color/white"
            />
    </android.support.v7.widget.CardView>
</RelativeLayout>