<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.XuiGaiActivity"
     android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/beijing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141931"
        android:orientation="vertical">

        <EditText
            android:id="@+id/jiupwd"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@drawable/shapes"
            android:textColor="#fff"
            android:hint="请输入您旧密码"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/xinpwd"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:background="@drawable/shapes"
            android:hint="请设置新密码"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/xinpwd1"
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:background="@drawable/shapes"
            android:hint="请重复新密码"
            android:padding="@dimen/dp_0_1"
            android:textColorHint="#999999"
            android:textSize="@dimen/dp_20" />



        <TextView
            android:id="@+id/quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_10"
            android:text="取消修改"
            android:textColor="#999999"
            android:textSize="@dimen/dp_15" />


        <Button
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/sel"
            android:id="@+id/xiugai"
            android:text="修改"
            android:textColor="#ffff"
            android:textSize="@dimen/dp_20" />


    </LinearLayout>
</LinearLayout>