<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="#1c2243">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_130"
            android:id="@+id/image8"
            app:roundedCornerRadius="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/sp_10"
                android:layout_height="wrap_content"
                android:id="@+id/text_name8"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_10"
                android:id="@+id/text_name9"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dp_12"
                android:layout_marginLeft="@dimen/sp_10"
                android:id="@+id/text_name10"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="@dimen/dp_45"
                android:background="@drawable/translucent4"
                android:text="购票"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/releasedmovie_bt"
                android:layout_marginLeft="@dimen/dp_14"
                />

            <Button
                android:layout_width="@dimen/dp_45"
                android:background="#d3af56"
                android:text="已预约"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/reservation_bt"
                android:layout_marginLeft="@dimen/dp_14"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

