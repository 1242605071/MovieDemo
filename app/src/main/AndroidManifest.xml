        <activity android:name=".view.myactivity.OrderActivity" />
        <activity android:name=".view.myactivity.RecordActivity" />
        <activity android:name=".view.myactivity.FollowActivity" />
        <activity android:name=".view.myactivity.SeenActivity" />
        <activity android:name=".view.myactivity.MyCommentActivity" />
        <activity android:name=".view.myactivity.FeedBackActivity" />
        <activity android:name=".view.myactivity.SetupActivity" />
